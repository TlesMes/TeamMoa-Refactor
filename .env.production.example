# TeamMoa Production Environment Variables
# Copy this file to .env.production and fill in the values

# Django Secret Key (REQUIRED - Generate a new one for production)
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your_production_secret_key_here_change_this

# Debug Mode (MUST be False in production)
DEBUG=False

# Allowed Hosts (REQUIRED - Comma separated list of domains)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Settings (MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=teammoa_db
DB_USER=teammoa_user
DB_PASSWORD=your_secure_database_password
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=your_secure_root_password
DB_CONN_MAX_AGE=600

# Redis Settings (for Django Channels)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# Email Settings (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_production_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Google OAuth 2.0 (Production)
GOOGLE_OAUTH_CLIENT_ID=your-production-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-production-client-secret

# GitHub OAuth 2.0 (Production)
GITHUB_OAUTH_CLIENT_ID=your-production-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-production-github-client-secret

# CORS Settings (if using separate frontend)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Admin URL (optional security measure)
ADMIN_URL=admin/

# Sentry DSN (optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
